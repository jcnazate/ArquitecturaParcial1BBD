<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".LoginActivity">

    <!-- CardView principal de login - MÃ¡s arriba en el medio -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="60dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:cardMaxElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- Icono de banco -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="ðŸ›ï¸"
                android:textSize="64sp" />

            <!-- TÃ­tulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Eureka Bank"
                android:textColor="@color/text_primary"
                android:textSize="32sp"
                android:textStyle="bold" />

            <!-- SubtÃ­tulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="Iniciar SesiÃ³n"
                android:textColor="@color/text_secondary"
                android:textSize="16sp" />

            <!-- Username -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Usuario"
                app:boxStrokeColor="@color/input_focus"
                app:hintTextColor="#FF000000"
                app:hintEnabled="true"
                app:hintTextAppearance="@style/HintTextAppearanceDark"
                app:expandedHintEnabled="true"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="2dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="#FF000000"
                    android:textSize="16sp"
                    android:textColorHint="#FF000000" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:hint="ContraseÃ±a"
                app:boxStrokeColor="@color/input_focus"
                app:hintTextColor="#FF000000"
                app:hintEnabled="true"
                app:hintTextAppearance="@style/HintTextAppearanceDark"
                app:expandedHintEnabled="true"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="2dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="#FF000000"
                    android:textSize="16sp"
                    android:textColorHint="#FF000000" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- ProgressBar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- Login Button -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/button_gradient"
                android:elevation="4dp"
                android:text="Iniciar SesiÃ³n"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Imagen Sullyvan - MÃ¡s pequeÃ±a, a la izquierda y debajo del cuadro blanco -->
    <ImageView
        android:id="@+id/imgSullyvan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:scaleType="fitStart"
        android:src="@drawable/sullyvan"
        android:contentDescription="Sullyvan"
        android:adjustViewBounds="true"
        android:elevation="1dp"
        android:alpha="0.9"
        android:maxWidth="150dp"
        android:maxHeight="200dp"
        android:layout_marginBottom="40dp" />

</FrameLayout>
